<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nep-YTDL - YouTube Video Downloader</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <style>
        body {
            background-color: #141414;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #222;
            padding: 10px 0;
            text-align: center;
        }

        .navbar img {
            height: 50px;
            margin-top: 5px;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #222;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        video {
            display: block;
            max-width: 100%;
            height: auto;
            margin: 0 auto 20px;
            border-radius: 5px;
        }

        .dropdown {
            margin-bottom: 20px;
        }

        .dropdown select {
            width: 100%;
            padding: 10px;
            border: 1px solid #333;
            border-radius: 5px;
            background-color: #222;
            color: #fff;
            font-size: 16px;
        }

        .list-group-item {
            background-color: transparent;
            border: none;
            padding: 10px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #e50914;
            color: #fff;
            border: none;
            border-radius: 5px;
            text-align: center;
            transition: background-color 0.3s ease;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-decoration: none; /* Remove default underline */
        }

        .btn:hover {
            background-color: #b00710;
        }

        .btn i {
            margin-right: 5px;
        }

        .download-icon {
            color: #fff;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <img src="images/video.svg" alt="YouTube Logo">
    </div>

    <div class="container">
        <h1>Nep-YTDL - YouTube Video Downloader</h1>
        <video controls>
            <source src="/stream?url=<%= encodeURIComponent(url) %>&quality=<%= encodeURIComponent(formats[0].itag) %>" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        
        <div class="dropdown">
            <label for="format">Select Format:</label>
            <select id="format" onchange="changeFormat(this)">
                <option value="webm">WEBM</option>
                <option value="mp4">MP4</option>
            </select>
        </div>
        
        <div id="download-options">
            <ul class="list-group">
                <% formats.forEach(function(format) { %>
                    <li class="list-group-item <% if (format.container === 'mp4') { %>mp4 <% } else if (format.container === 'webm') { %>webm <% } %>">
                        <span><%= format.qualityLabel || format.resolution %> (<%= format.container %>)</span>
                        <a href="/download?url=<%= url %>&quality=<%= format.itag %>&title=<%= encodeURIComponent(title) %>" class="btn">
                            <i class="fas fa-download download-icon"></i> Download
                        </a>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>

    <script>
        function changeFormat(select) {
            const selectedFormat = select.value;
            const options = document.querySelectorAll('#download-options .list-group-item');

            options.forEach(option => {
                option.style.display = option.classList.contains(selectedFormat) ? 'flex' : 'none';
            });
        }
    </script>
</body>
</html>

